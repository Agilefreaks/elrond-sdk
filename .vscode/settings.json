{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/__pycache__": true,
        "*.egg-info": true,
        "**/*.pyc": true,
        "build": true,
        "dist": true,
        "distribution/go": true,
        "erdjs/out": true,
        "erdjs/out-node": true,
        "erdjs/out-browser": true,
        "erdtestjs/out": true,
        "sandbox/sc-busd-rs": true
    },
    "files.watcherExclude": {
        "**/.git": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "build": true,
        "dist": true
    },
    "files.insertFinalNewline": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./erdpy/tests",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.unittestEnabled": true
}